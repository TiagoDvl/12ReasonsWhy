<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/month_6_mirror"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:columnCount="4"
        android:horizontalSpacing="1dp"
        android:rowCount="4"
        android:verticalSpacing="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- First row -->
        <View
            android:id="@+id/naval_item_1"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_2"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_3"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_4"
            style="@style/NavalBattle" />


        <!-- Second row -->
        <View
            android:id="@+id/naval_item_5"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_6"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_7"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_8"
            style="@style/NavalBattle" />


        <!-- Third row -->
        <View
            android:id="@+id/naval_item_9"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_10"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_11"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_12"
            style="@style/NavalBattle" />


        <!-- Fourth row -->
        <View
            android:id="@+id/naval_item_13"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_14"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_15"
            style="@style/NavalBattle" />

        <View
            android:id="@+id/naval_item_16"
            style="@style/NavalBattle" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/month_6_naval_battle"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/naval_battle_commands"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="60dp"
        android:background="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>